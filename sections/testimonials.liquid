						"label": "Rating",
						"min": 1,
						"max": 5,
						"step": 0.5,
						"default": 5
					},
					{
						"type": "text",
						"id": "author",
						"label": "Author name",
						"default": "John Doe"
					},
					{
						"type": "text",
						"id": "author_subheading",
						"label": "Author subheading",
						"default": "CEO of E-commerce"
					},
					{
						"type": "text",
						"id": "heading",
						"label": "Heading",
						"default": "Testimonial"
					},
					{
						"type": "inline_richtext",
						"id": "content",
						"label": "Content",
						"default": "Add customer reviews and testimonials to showcase your store's happy customers."
					}
