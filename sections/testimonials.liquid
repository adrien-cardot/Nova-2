			{
				"type": "checkbox",
				"id": "show_rating",
				"label": "Show star rating",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "gyro_effect",
				"label": "Enable 3D effect on mouseover",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "center_content",
				"label": "Center content",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "round_image",
				"label": "Make avatar images round",
				"default": true
