	{
		"name": "Brand",
		"settings": [
			{
				"type": "header",
				"content": "Logo"
			},
			{
				"type": "image_picker",
				"id": "brand_logo",
				"label": "Logo image"
			},
			{
				"type": "range",
				"id": "brand_logo_width",
				"min": 30,
				"max": 300,
				"step": 10,
				"default": 100,
				"unit": "px",
				"label": "Width"
			},
			{
				"type": "header",
				"content": "Text logo",
				"info": "Becomes visible if no image is specified"
			},
			{
				"type": "text",
				"id": "brand_text_logo",
				"label": "Text"
			},
			{
				"type": "font_picker",
				"id": "brand_text_logo_font",
				"default": "assistant_n4",
				"label": "Font"
			},
			{
				"type": "range",
				"id": "brand_text_logo_font_size",
				"min": 24,
				"max": 60,
				"step": 2,
				"default": 28,
				"unit": "px",
				"label": "Font size"
			},
			{
				"type": "range",
				"id": "brand_text_logo_letter_spacing",
				"min": -1,
				"max": 3,
				"step": 0.5,
				"default": 1,
				"unit": "px",
				"label": "Letter spacing"
			},
			{
				"type": "header",
				"content": "Favicon"
			},
			{
				"type": "image_picker",
				"id": "brand_favicon",
				"label": "Favicon image",
				"info": "Will be scaled down to 32 x 32px"
			}
		]
	},
